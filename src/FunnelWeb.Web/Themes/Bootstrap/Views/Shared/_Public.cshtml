@using StackExchange.Profiling
<!doctype html>
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js" lang="en">
<!--<![endif]-->
<head>
    <title>@(ViewBag.Title == null ? "" : (ViewBag.Title + " - "))@Html.Settings().SiteTitle
    </title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="language" content="english" />
    
    <link rel="alternate" href="@Html.Qualify(Html.ActionUrl("Feed", "Feed", null))" type="application/atom+xml" title="Blog" />
    <link title="RSD" href="@Html.Qualify(Href("~/rsd.xml"))" type="application/rsd+xml" rel="EditURI" />
    
    <!--[if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
   
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Themes/Bootstrap/Content/Styles/Bootstrap.css")
    <link href="@Html.Qualify(Href("~/content/theme.css"))" rel="stylesheet"/> 
    @RenderSection("Meta", required: false)
    @MvcHtmlString.Create(Html.Settings().HtmlHead)
    <script>
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        window.disqus_shortname = '@Html.Settings().DisqusShortname'; // required: replace example with your forum shortname
        window.disqus_identifier = document.title || 'Home';
        window.disqus_developer = !! ~document.location.href.indexOf("localhost") ? 1 : 0;
        window.disqus_url = document.location.href;
    </script>
</head>
<body>
    <div class="topbar">
        <div class="fill">
            <header class="container" role="banner">
                <a class="brand" href="@Url.Content("~/")" title="@Html.Settings().SiteTitle">@Html.Settings().SiteTitle</a>
                <nav role="navigation">
                    <ul class="nav">
                        @MvcHtmlString.Create(Html.Settings().MainLinks)
                        @if (ViewData.IsLoggedIn())
                        {
                            <li class="dropdown" data-dropdown="dropdown">
                                <a href="#" class="dropdown-toggle">Admin</a>
                                <ul class="dropdown-menu">
                                    <li>@Html.AdminActionLink("New Post", "Edit", "WikiAdmin")</li>
                                    <li>@Html.AdminActionLink("Admin", "Index", "Admin")</li>
                                    <li class="divider"></li>
                                    <li>@Html.AdminActionLink("Logout", "Logout", "Login")</li>
                                </ul>
                            </li>
                        }
                    </ul>
                </nav>
                @using (Html.BeginForm("Search", "Wiki", FormMethod.Get, new { @class = "pull-right", role = "search" }))
                {
                    <input type="search" name="q" class="medium" value="@Request.QueryString["q"]" />
                    <button id="search" class="btn" type="submit">Search</button>
                }
            </header>
        </div>
    </div>
    <div class="container">
        @if (TempData.ContainsKey("Flash"))
        {
            <div class="alert-message">
                <p>@TempData["Flash"]</p>
            </div>
        }
        <div class="content">
            @if (IsSectionDefined("Summary"))
            {
                <div class="page-header">
                    @RenderSection("Summary", required: false)
                </div>
            }
            <div class="row">
                @RenderBody()
            </div>
        </div>
        <footer role="contentinfo">
            @MvcHtmlString.Create(Html.Settings().Footer)
            @if (!ViewData.IsLoggedIn())
            {
                <p>@Html.AdminActionLink("Log in", "Login", "Login").</p>
            }
        </footer>
    </div>

    <!-- Powered by FunnelWeb, the blog engine of real developers -->
    <!-- FunnelWeb version: @Html.Version() -->

    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jsdate")
    @Scripts.Render("~/bundles/showdown")
    @Scripts.Render("~/bundles/prettify")
    @Scripts.Render("~/bundles/disqus-count")

    @Scripts.Render("~/Themes/Bootstrap/Content/Scripts/bootstrap-twipsy.js")    
    @Scripts.Render("~/Themes/Bootstrap/Content/Scripts/bootstrap-dropdown.js")
    @Scripts.Render("~/Themes/Bootstrap/Content/Scripts/site.js")
    @Scripts.Render("~/Scripts/jquery.tinycaroussel.min.js");

    @MiniProfiler.RenderIncludes()
    
    <script type="text/javascript">
        $(function () {
            $('.live-tile').tinycarousel({ pager: false, interval: true, intervaltime: 6500, axis: 'y', animation: true });
        });
    </script>

</body>
</html>
