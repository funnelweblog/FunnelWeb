@model IEnumerable<Comment>

@if (!Model.Any() && !Html.Settings().EnableDisqusCommenting)
{
	<div class="empty">
		<p>
			No comments yet. Be the first!
		</p>
	</div>
}
else
{
	<div class="comments">
		<div class="comments-in">
			<a name="comments"></a>
			<h2>Comments</h2>
			@foreach (var comment in Model.Where(x => !x.IsSpam))
	 {
				@Html.DisplayFor(_ => comment, new { ViewBag.Entry })
	 }
		</div>
	</div>
}