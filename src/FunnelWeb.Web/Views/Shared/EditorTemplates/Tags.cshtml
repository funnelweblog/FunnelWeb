@model IEnumerable<Tag>

@{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/taggy")
}

<div id="tags" class="tagInputContainer field">
    <ul id="selectedTags" class="tagLines">
        @foreach (var tag in Model) { 
            <li class="newTagItem" id="container-@tag.Id"><a><em class="tagName">@tag.Name</em><span class="rm" id="@tag.Id"></span></a></li>
        }  
        <li class="newTagInputWrapper" style="width: 30px">
            <input type="text" id="tagInput" name="agInput" />
            <div id="tmpTagsInput"></div>
        </li>
    </ul>
    <input type="hidden" value="@string.Join(",", Model.Select(x => x.Id))" name="@Html.FieldNameFor(x => Model)-Ids" />
</div>
